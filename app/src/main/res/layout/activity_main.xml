<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6D2E63CA"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <TextView
        android:id="@+id/Settings"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#BCF1AEAE"
        android:text="SETTINGS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:fontFamily="sans-serif-light" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="120dp"
        android:background="?android:attr/listDivider"
        android:color="#050000" />

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="95dp"
        android:layout_marginTop="135dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="106dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/FirstAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Alarm"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/FirstAlarmDescription"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Number of minutes before event first alarm should occur "
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="26dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/FirstAlarmInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="10" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerHorizontal"
        android:layout_marginTop="240dp" />

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="90dp"
        android:layout_marginTop="255dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="106dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/SnoozeTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Snooze Time"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/SnoozeDescription"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Number of minutes alarm should snooze for"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="26dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/SnoozeTimeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="5" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <View
        android:id="@id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerHorizontal"
        android:layout_marginTop="360dp" />


    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="126dp"
        android:layout_marginTop="375dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="204dp"
            android:layout_height="121dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/NagTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nag Time"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/NagDescription"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:text="Number of minutes alarm should wait before ringing again, if neither button is pressed "
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="65dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/NagTimeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="2" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>



    <View
        android:id="@id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerHorizontal"
        android:layout_marginTop="515dp" />

    <Button
        android:id="@+id/Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="530dp"
        android:background="#BCF1AEAE"
        android:onClick="onSubmit"
        android:text="Submit" />


</RelativeLayout>